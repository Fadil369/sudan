# Sudan National Digital Identity System - Production Environment Variables

# ===========================================
# GENERAL CONFIGURATION
# ===========================================
NODE_ENV=production
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01
REACT_APP_ENVIRONMENT=production

# ===========================================
# API CONFIGURATION
# ===========================================
REACT_APP_API_BASE_URL=https://api.sudan.gov.sd/v1
REACT_APP_API_VERSION=1.0
REACT_APP_API_TIMEOUT=30000

# Government API Endpoints
REACT_APP_HEALTH_API_URL=https://health.sudan.gov.sd/api/v1
REACT_APP_EDUCATION_API_URL=https://education.sudan.gov.sd/api/v1
REACT_APP_FINANCE_API_URL=https://finance.sudan.gov.sd/api/v1
REACT_APP_AGRICULTURE_API_URL=https://agriculture.sudan.gov.sd/api/v1
REACT_APP_ENERGY_API_URL=https://energy.sudan.gov.sd/api/v1
REACT_APP_INFRASTRUCTURE_API_URL=https://infrastructure.sudan.gov.sd/api/v1
REACT_APP_JUSTICE_API_URL=https://justice.sudan.gov.sd/api/v1
REACT_APP_FOREIGN_AFFAIRS_API_URL=https://foreign.sudan.gov.sd/api/v1
REACT_APP_LABOR_API_URL=https://labor.sudan.gov.sd/api/v1
REACT_APP_SOCIAL_WELFARE_API_URL=https://social.sudan.gov.sd/api/v1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
REACT_APP_DB_HOST=db.sudan.gov.sd
REACT_APP_DB_PORT=5432
REACT_APP_DB_NAME=sudan_national_identity
REACT_APP_DB_SSL=true

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
REACT_APP_JWT_SECRET=PRODUCTION_SECRET_REPLACE_WITH_SECURE_KEY
REACT_APP_JWT_EXPIRES_IN=24h
REACT_APP_JWT_REFRESH_SECRET=PRODUCTION_REFRESH_SECRET_REPLACE_WITH_SECURE_KEY
REACT_APP_JWT_REFRESH_EXPIRES_IN=7d
REACT_APP_ENCRYPTION_KEY=PRODUCTION_ENCRYPTION_KEY_REPLACE_WITH_SECURE_KEY

# OAuth 2.0 / OpenID Connect
REACT_APP_OAUTH_CLIENT_ID=sudan-government-portal
REACT_APP_OAUTH_CLIENT_SECRET=PRODUCTION_OAUTH_SECRET
REACT_APP_OAUTH_ISSUER=https://auth.sudan.gov.sd
REACT_APP_OAUTH_REDIRECT_URI=https://portal.sudan.gov.sd/auth/callback

# ===========================================
# BRAINSAIT ECOSYSTEM INTEGRATION
# ===========================================
REACT_APP_BRAINSAIT_API_URL=https://api.brainsait.com/v1
REACT_APP_BRAINSAIT_OID_REGISTRY=https://oid.brainsait.com/v1
REACT_APP_BRAINSAIT_API_KEY=PRODUCTION_BRAINSAIT_API_KEY
REACT_APP_SUDAN_OID_BRANCH=1.3.6.1.4.1.61026.1

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
REACT_APP_BLOCKCHAIN_ENABLED=true
REACT_APP_BLOCKCHAIN_NETWORK=hyperledger-fabric
REACT_APP_BLOCKCHAIN_CA_URL=https://ca.sudan-blockchain.gov.sd
REACT_APP_BLOCKCHAIN_PEER_URL=grpc://peer0.sudan-blockchain.gov.sd:7051
REACT_APP_BLOCKCHAIN_ORDERER_URL=grpc://orderer.sudan-blockchain.gov.sd:7050
REACT_APP_BLOCKCHAIN_CHANNEL=sudan-identity-channel
REACT_APP_BLOCKCHAIN_CHAINCODE=sudan-identity-chaincode

# ===========================================
# CLOUD INFRASTRUCTURE
# ===========================================
REACT_APP_CLOUD_PROVIDER=aws
REACT_APP_CDN_URL=https://cdn.sudan.gov.sd
REACT_APP_STORAGE_BUCKET=sudan-gov-documents
REACT_APP_REDIS_URL=redis://cache.sudan.gov.sd:6379

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
REACT_APP_MONITORING_ENABLED=true
REACT_APP_ANALYTICS_ID=GA_TRACKING_ID_REPLACE
REACT_APP_ERROR_REPORTING_URL=https://errors.sudan.gov.sd
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_LOG_LEVEL=info

# ===========================================
# GOVERNMENT INTEGRATION
# ===========================================
# Sudan National Records Office
REACT_APP_NATIONAL_RECORDS_API=https://records.sudan.gov.sd/api/v1
REACT_APP_NATIONAL_RECORDS_API_KEY=PRODUCTION_RECORDS_API_KEY

# Sudan Central Bank
REACT_APP_CENTRAL_BANK_API=https://cbs.sudan.gov.sd/api/v1
REACT_APP_CENTRAL_BANK_API_KEY=PRODUCTION_BANK_API_KEY

# Sudan Post
REACT_APP_SUDAN_POST_API=https://post.sudan.gov.sd/api/v1
REACT_APP_SUDAN_POST_API_KEY=PRODUCTION_POST_API_KEY

# National Statistics Office
REACT_APP_STATISTICS_API=https://statistics.sudan.gov.sd/api/v1
REACT_APP_STATISTICS_API_KEY=PRODUCTION_STATS_API_KEY

# ===========================================
# MULTI-LANGUAGE SUPPORT
# ===========================================
REACT_APP_DEFAULT_LANGUAGE=ar
REACT_APP_SUPPORTED_LANGUAGES=ar,en
REACT_APP_RTL_LANGUAGES=ar

# ===========================================
# BIOMETRIC SERVICES
# ===========================================
REACT_APP_BIOMETRIC_SERVICE_URL=https://biometric.sudan.gov.sd/api/v1
REACT_APP_BIOMETRIC_API_KEY=PRODUCTION_BIOMETRIC_API_KEY
REACT_APP_FINGERPRINT_ENABLED=true
REACT_APP_FACIAL_RECOGNITION_ENABLED=true
REACT_APP_IRIS_SCAN_ENABLED=true
REACT_APP_VOICE_RECOGNITION_ENABLED=true

# ===========================================
# MESSAGING & NOTIFICATIONS
# ===========================================
REACT_APP_SMS_SERVICE_URL=https://sms.sudan.gov.sd/api/v1
REACT_APP_SMS_API_KEY=PRODUCTION_SMS_API_KEY
REACT_APP_EMAIL_SERVICE_URL=https://email.sudan.gov.sd/api/v1
REACT_APP_EMAIL_API_KEY=PRODUCTION_EMAIL_API_KEY
REACT_APP_PUSH_NOTIFICATIONS_ENABLED=true
REACT_APP_FCM_SERVER_KEY=PRODUCTION_FCM_KEY

# ===========================================
# COMPLIANCE & AUDIT
# ===========================================
REACT_APP_AUDIT_LOGGING_ENABLED=true
REACT_APP_AUDIT_RETENTION_DAYS=2555  # 7 years
REACT_APP_COMPLIANCE_MODE=iso27001
REACT_APP_DATA_CLASSIFICATION=government-restricted

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================
REACT_APP_CACHE_TTL=3600  # 1 hour
REACT_APP_API_RATE_LIMIT=1000  # requests per minute
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB
REACT_APP_COMPRESSION_ENABLED=true
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_SUPPORT=true

# ===========================================
# DEVELOPMENT/DEBUG (disabled in production)
# ===========================================
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_DATA=false
REACT_APP_API_MOCKING=false
REACT_APP_PERFORMANCE_PROFILING=false

# ===========================================
# REGIONAL DEPLOYMENT
# ===========================================
REACT_APP_PRIMARY_REGION=khartoum
REACT_APP_SECONDARY_REGIONS=kassala,port-sudan,nyala,el-obeid
REACT_APP_LOAD_BALANCER_URL=https://lb.sudan.gov.sd
REACT_APP_FAILOVER_ENABLED=true

# ===========================================
# CITIZEN SERVICES
# ===========================================
REACT_APP_MAX_CONCURRENT_USERS=50000000  # 50M citizens
REACT_APP_SESSION_TIMEOUT=1800  # 30 minutes
REACT_APP_IDLE_TIMEOUT=900  # 15 minutes
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_ACCOUNT_LOCKOUT_DURATION=1800  # 30 minutes

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# DHIS2 (Health Information System)
REACT_APP_DHIS2_URL=https://dhis2.sudan.gov.sd
REACT_APP_DHIS2_USERNAME=sudan_portal_integration
REACT_APP_DHIS2_PASSWORD=PRODUCTION_DHIS2_PASSWORD

# IFMIS (Integrated Financial Management Information System)
REACT_APP_IFMIS_URL=https://ifmis.sudan.gov.sd/api/v1
REACT_APP_IFMIS_API_KEY=PRODUCTION_IFMIS_API_KEY

# African Union Integration
REACT_APP_AU_API_URL=https://api.au.int/v1
REACT_APP_AU_CREDENTIAL=PRODUCTION_AU_CREDENTIAL