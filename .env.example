# Sudan OID Government Portal - Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# Application Configuration
NODE_ENV=production
REACT_APP_NAME="Sudan OID Government Portal"
REACT_APP_VERSION=1.0.0
REACT_APP_DEBUG=false

# API Configuration
REACT_APP_API_BASE_URL=https://api.sd.brainsait.com/v1
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Legacy (deprecated): kept for compatibility with older builds
# REACT_APP_API_URL=https://api.sd.brainsait.com

# Sudan OID System Configuration
REACT_APP_OID_BASE=1.3.6.1.4.1.61026
REACT_APP_OID_COUNTRY_CODE=729
REACT_APP_OID_GOVERNMENT_BRANCH=1.3.6.1.4.1.61026.4.1

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-256-bits
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=12

# Encryption Keys (Generate new keys for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
HMAC_SECRET=your-hmac-secret-for-audit-logging

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sudan_oid_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_SSL_MODE=require

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sudan-mainnet
BLOCKCHAIN_PEER_ENDPOINT=grpc://blockchain.sd.brainsait.com:7051
BLOCKCHAIN_ORDERER_ENDPOINT=grpc://orderer.sd.brainsait.com:7050
BLOCKCHAIN_MSP_ID=SudanGovMSP
BLOCKCHAIN_CHANNEL_NAME=sudan-government-channel

# External Services
BIOMETRIC_SERVICE_URL=https://biometric.sd.brainsait.com
BIOMETRIC_API_KEY=your-biometric-service-api-key
BIOMETRIC_TIMEOUT=15000

SMS_SERVICE_URL=https://sms.sd.brainsait.com
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SUDANGOV

EMAIL_SERVICE_URL=https://email.sd.brainsait.com
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM_ADDRESS=noreply@sd.brainsait.com
EMAIL_FROM_NAME="Sudan Government Portal"

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for government compliance

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
UPTIME_MONITOR_URL=https://monitor.sd.brainsait.com/webhook

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif
UPLOAD_PATH=/var/uploads/sudan-gov
VIRUS_SCAN_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# Ministry Specific Configuration
HEALTH_MINISTRY_API=https://health-api.sd.brainsait.com
EDUCATION_MINISTRY_API=https://education-api.sd.brainsait.com
FINANCE_MINISTRY_API=https://finance-api.sd.brainsait.com
JUSTICE_MINISTRY_API=https://justice-api.sd.brainsait.com
INFRASTRUCTURE_MINISTRY_API=https://infrastructure-api.sd.brainsait.com
AGRICULTURE_MINISTRY_API=https://agriculture-api.sd.brainsait.com
ENERGY_MINISTRY_API=https://energy-api.sd.brainsait.com
LABOR_MINISTRY_API=https://labor-api.sd.brainsait.com
FOREIGN_AFFAIRS_MINISTRY_API=https://foreign-affairs-api.sd.brainsait.com
SOCIAL_WELFARE_MINISTRY_API=https://social-welfare-api.sd.brainsait.com

# Geolocation Services
GEOLOCATION_API_URL=https://geo.sd.brainsait.com
GEOLOCATION_API_KEY=your-geolocation-api-key

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_URL=https://payments.sd.brainsait.com
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# Backup Configuration
BACKUP_S3_BUCKET=sudan-gov-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
BACKUP_FREQUENCY=daily

# Development/Testing Only
# Remove these in production
MOCK_SERVICES=false
TEST_USER_EMAIL=test@sd.brainsait.com
TEST_USER_PASSWORD=TestPassword123!
BYPASS_BIOMETRIC=false
DISABLE_RATE_LIMITING=false

# Emergency Configuration
EMERGENCY_MODE=false
EMERGENCY_CONTACT=emergency@sd.brainsait.com
EMERGENCY_PHONE=+249-XXX-XXX-XXX

# Compliance & Legal
DATA_RETENTION_DAYS=2555  # 7 years
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0
GDPR_COMPLIANCE=true
SUDAN_DATA_PROTECTION_COMPLIANCE=true

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_BLOCKCHAIN_VERIFICATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=false
ENABLE_AI_ASSISTANT=true

# Performance Configuration
CACHE_TTL=300  # 5 minutes
CDN_URL=https://cdn.sd.brainsait.com
ENABLE_COMPRESSION=true
ENABLE_HTTP2=true

# Time Zone
TZ=Africa/Khartoum

# Localization
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
RTL_LANGUAGES=ar

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
ENABLE_CSP=true
ENABLE_CORS=true
ALLOWED_ORIGINS=https://sd.brainsait.com,https://www.sd.brainsait.com
